#version 430

// samplers
layout(binding=0) uniform sampler2D albedo_tex;
layout(binding=1) uniform sampler2D depth_tex;

// attribute inputs
in vec2 texcoord_fs;

// fragment outputs
out vec4 frag_color;

// shader entry point
void main()
{
	frag_color = texture2D(albedo_tex, texcoord_fs);
	gl_FragDepth = texture2D(depth_tex, texcoord_fs).r;
}
