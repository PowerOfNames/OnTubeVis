#version 430

layout (binding = 0) uniform sampler2D color_tex;
layout (binding = 1) uniform sampler2D depth_tex;

uniform bool test;

in vec2 texcoord_fs;

out layout(location = 0) vec4 frag_color;

void main()
{
	frag_color = clamp(texture(color_tex, texcoord_fs), 0.0, 1.0);
	if(test)
		frag_color *= vec4(1.0, 0.0, 0.0, 1.0);
	//frag_color = vec4(1.0, 0.0, 0.0, 1.0)*clamp(texture(color_tex, texcoord_fs), 0.0, 1.0);
	gl_FragDepth = texture(depth_tex, texcoord_fs).r;
}
